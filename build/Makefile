# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  ViperEngine_config = debug
  ViperEgnineExampleBasic_config = debug
endif
ifeq ($(config),release)
  ViperEngine_config = release
  ViperEgnineExampleBasic_config = release
endif
ifeq ($(config),windows)
  ViperEngine_config = windows
  ViperEgnineExampleBasic_config = windows
endif

PROJECTS := ViperEngine ViperEgnineExampleBasic

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

ViperEngine:
ifneq (,$(ViperEngine_config))
	@echo "==== Building ViperEngine ($(ViperEngine_config)) ===="
	@${MAKE} --no-print-directory -C . -f ViperEngine.make config=$(ViperEngine_config)
endif

ViperEgnineExampleBasic: ViperEngine
ifneq (,$(ViperEgnineExampleBasic_config))
	@echo "==== Building ViperEgnineExampleBasic ($(ViperEgnineExampleBasic_config)) ===="
	@${MAKE} --no-print-directory -C . -f ViperEgnineExampleBasic.make config=$(ViperEgnineExampleBasic_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f ViperEngine.make clean
	@${MAKE} --no-print-directory -C . -f ViperEgnineExampleBasic.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  windows"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ViperEngine"
	@echo "   ViperEgnineExampleBasic"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"